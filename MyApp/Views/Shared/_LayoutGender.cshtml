<!DOCTYPE html>

<html lang="fa">
<head>
    <title>@ViewBag.Title</title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE-edge" />
    <meta name="viewport" content="width-device,initial-scale-1" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-rtl.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/SiteStyle.css" rel="stylesheet" />
</head>
<body>
    <form role="search" action="/Gender/Search" method="get">
        <div style="margin-top:15px ; margin-left:10px;" >
            <div class="col-lg-3 col-md-4 col-sm-5 col-xs-8">
                @Html.TextBox("strsearch","",new  { @class="form-control",placeholder="جستجو..."})

            </div>
            <div>
                <button type="submit" class="btn" style="background-color:#ff6e00 ;color:black">
                    <span class="fa fa-search" style="margin-left:5px"></span>
                    جستجو
                </button>
            </div>
        </div>


    </form>



    <div class="icon-bar" style="z-index:1000">
        @Html.Action("ShowSocial","Gender")
    </div>
    <div>
        @RenderBody()
    </div>

    @*====footer===*@
    <footer class="footer">
        <div class="container">
            <div class="footer-logo">
                <a href="/"><img src="~/images/Logo/logo.png"alt="" class="img-responsive" style="margin:auto" width="130"/></a>


            </div>
            <span class="copyright">&cong; تماس حقوق این سایت مربوط به مرتضوی می باشد</span>
            <div class="credits">
                طراحی و توسعه توسط <a href="Mohammad mortazavi"> محمد مرتضوی می باشد</a>
            </div>

        </div>

    </footer>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap-rtl.min.js"></script>
    <script src="~/Scripts/SiteScript.js"></script>
    
</body>
</html>
