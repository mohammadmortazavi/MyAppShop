@model IEnumerable<MyApp.Models.Product>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutGender.cshtml";
}

<h2>Search</h2>

<div class="row">
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="column @item.ProductCategories.Name">
                <div class="content">
                    <div class="container">
                        <img src="~/images/Product/@item.Img" alt="" style="width:100%" class="image" />
                        <a href="#">
                            <div class="middle">
                                <div class="text-center" style="background-color:#ff6e00; color:black">نمایش جزییات</div>
                            </div>

                        </a>
                        <h4 class="text-center">1000$</h4>
                        <p class="text-center">در 5 رنگه متنوع</p>

                    </div>
                </div>

            </div>
        }
    }
    else
    {
        <h2 class="text-center">
            محصولی یافت نشد
        </h2>
    }
</div>