
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDetail.cshtml";
}

<section id="subintro">
    <div class="container">
        <div class="row">
            <div class="fa-span8 col-lg-12">
                <a class="pull-right a-top-orange" href="#" onclick='Sale(@ViewBag.proId)'> افزودن سبد خرید</a>

                @Html.Action("CountShopingCart" , "UserPanel")
            </div>

        </div>

    </div>

</section>

<section id="maincontent">
    <div class="container">
        <div class="row">
            <div class="span12">
                <article>
                    <div class="span4 col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <aside>
                            <div class="widget">
                                <div class="project-widget">
                                    <h4 class="rheading">
                                        جزییات محصول
                                        <span></span></h4>
                                    <ul class="project-detail">
                                        @*<hr  class="hrStyle"/>
                                        <li>
                                            <label style="float:left; margin-right:10px;">سایز های موجود :</label>

                                        </li>*@

                                        @Html.Action("Size" , "Detail", new { @Id = ViewBag.proId })
                                       
                                        @Html.Action("Color", "Detail", new { @Id = ViewBag.proId })
                                       
                                       

                                        
                                        <li>
                                            <label style="float:left; margin-right:10px;">   تومان : قیمت</label>
                                            <p>@ViewBag.price</p>

                                        </li>
                                        

                                       @Html.Action("Pishnahadi", "Detail", new { @Id = ViewBag.proId })




                                    </ul>
                                </div>
                            </div>
                        </aside>
                    </div>

                    <div class="span4 col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        @Html.Action("Gallery","Detail" , new { @Id=ViewBag.proId})

                    </div>
                </article>

            </div>

        </div>

    </div>

</section>

<div class="des1">
    <p>
        <h4>
            ویژگی محصول:
        </h4>
        <h5>
            @Html.Raw(ViewBag.descrip)
        </h5>
    </p>

</div>


<div id="myModal" class="modal fade" tabindex="-1" role="dialog">

    <div class="modal-dialog" role="document">

        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>

            <div id="bodymodal" class="modal-body">

            </div>

        </div>

    </div>

</div>

@section myscript
{
    
<script>
    function Sale(id) {
            $.ajax({
                url: "/UserPanel/Sale/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#myModal').modal('show');
                $('#myModalHeader').html('');
                $('#bodymodal').html(result);

            });
        }
</script>
}