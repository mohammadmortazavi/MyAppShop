@model IEnumerable<MyApp.Models.Product>

@{
    ViewBag.Title = "نمایش محصول";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <h2 class="pull-right">
        نمایش محصول
    </h2>
    <h2 class="pull-left">
        @Html.ActionLink("جدید", "Create", "", new { @class = "btn btn-success" })

    </h2>
</div>
<div class="clearfix" style="margin-bottom:50px;">

</div>
<div class="content">
    <div style="margin-bottom:30px;">
        @using (Html.BeginForm())
        {
            <div style="margin-top:10px;">
                <div class="col-lg-3 col-md-4 col-sm-5 col-xs-8">
                    @Html.TextBox("strsearch", "",new{ @class="form-control",placeholder="جستجو"})

                </div>
                <button type="submit" class="btn btn-success">جستجو</button>
            </div>

        }
    </div>


    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brands.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenderGategories.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategories.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.SalePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberSeen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberSale)
            </th>
            <th>عملیات</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brands.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenderGategories.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategories.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.SalePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberSeen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberSale)
                </td>
                <td>
                    @Html.ActionLink("جزییات", "Details", new { id = item.Id }, new { @class = "btn-xs btn-info" }) |
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn-xs btn-warning" }) |
                    @Html.ActionLink("گالری ", "Index", "Galleries", new { id = item.Id }, new { @class = "btn-xs btn-success" }) |
                    @Html.ActionLink("سایز / رنگ ", "Index", "SizeColors", new { id = item.Id }, new { @class = "btn-xs btn-primar" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn-xs btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>