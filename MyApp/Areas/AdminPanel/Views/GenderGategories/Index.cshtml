@model IEnumerable<MyApp.Models.GenderGategory>

@{
    ViewBag.Title = "نوع جنسیت";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <h2 class="pull-right">
        نمایش نوع جنسیت
    </h2>

</div>
<div class="clearfix" style="margin-bottom:50px;"></div>
<div class="content">

    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img)
            </th>
            <th>عملیات</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                   <img src="~/images/Banner/" class="img-responsive" width="40" height="40"/>
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn-xs btn-warning" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn-xs btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
