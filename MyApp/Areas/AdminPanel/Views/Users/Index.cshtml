@model IEnumerable<MyApp.Models.User>

@{
    ViewBag.Title = "نمایش کاربران";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <h2 class="pull-right">
        نمایش کاربران
    </h2>
    <h2 class="pull-left">
        @Html.ActionLink("جدید", "Create", "", new { @class = "btn btn-success" })

    </h2>
</div>
<div class="clearfix" style="margin-bottom:50px;"></div>
<div class="content">
    <div style="margin-bottom:30px;">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <div class="col-lg-3 col-md-4 col-sm-5 col-xs-8">
                    @Html.TextBox("strsearch", "", new { @class = "form-control", placeholder = "جستجو" })
                </div>
                <div>
                    <button type="submit" class="btn btn-success">
                        جستجو
                    </button>
                </div>
            </div>
        }
    </div>
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Roles.RoleTitel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th> عملیات</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Roles.RoleTitel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>

                <td>
                    @Html.ActionLink("آدرس", "ShowAddress", new { id = item.Id }, new { @class = "btn-xs btn-info" }) |
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn-xs btn-warning" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn-xs btn-danger" })
                </td>
            </tr>
        }

    </table>

</div>